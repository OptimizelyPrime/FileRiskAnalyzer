    "version": "0.2.0",
    "configurations": [
        {
            "name": "Scan Repo (module)",
            "type": "debugpy",
            "request": "launch",
            "module": "scan.main",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--repo-url", "https://github.com/OptimizelyPrime/FileRiskAnalyzer"
            ]
        },
        {
            "name": "Scan Repo (script)",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": []
        },
        {
            "name": "Generate Dashboard",
            "type": "debugpy",
            "request": "launch",
            "program": "generate_dashboard_with_data.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": []
        }
    ]
}
